<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menú"
            android:src="@drawable/menu" />
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Plaza caporal"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="86dp"
            android:layout_height="56dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Mapa"
            android:src="@drawable/btnback" />

        <ImageButton
            android:id="@+id/btnBack3"
            android:layout_width="86dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Mapa" />

        <ImageButton
            android:id="@+id/carrito"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/market_gray" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_buscar2"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:hint="Buscar"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/headerImage2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <ImageView
        android:id="@+id/headerImage2"
        android:layout_width="344dp"
        android:layout_height="115dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/alimentos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_buscar2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="343dp"
        android:layout_height="146dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerImage2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnVerduras"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Category_Verduras"
                android:padding="20dp"
                android:src="@drawable/icon_verduras" />
            <TextView
                android:id="@+id/appTitle5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="Verduras"
                android:textAlignment="center"
                android:textColor="#C7B6A0"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnFrutas"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Category_Frutas"
                android:padding="20dp"
                android:src="@drawable/icon_frutas" />
            <TextView
                android:id="@+id/appTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="Frutas"
                android:textAlignment="center"
                android:textColor="#C7B6A0"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnLacteos"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Category_Lacteos"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />
            <TextView
                android:id="@+id/appTitle6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="Lácteos"
                android:textAlignment="center"
                android:textColor="#C7B6A0"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <TableLayout
        android:layout_width="339dp"
        android:layout_height="316dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/appTitle7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="36dp"
            android:text="Recomendado"
            android:textColor="#969696"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.117"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnProduct0"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct1"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct2"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnProduct3"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct4"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct5"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/nav_map"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Mapa"
            android:src="@drawable/map_gray" />

        <ImageButton
            android:id="@+id/nav_cart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Carrito"
            android:src="@drawable/market_color" />

        <ImageButton
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Buscar"
            android:src="@drawable/buscar_gray" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>