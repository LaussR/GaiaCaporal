<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="86dp"
            android:layout_height="56dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Mapa"
            android:src="@drawable/btnback" />

        <ImageButton
            android:id="@+id/btnBack3"
            android:layout_width="86dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Mapa" />

        <ImageButton
            android:id="@+id/carrito"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/market_gray" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/appTitle7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Categoría"
            android:textColor="#969696"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.117"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnProduct0"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct1"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct2"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnProduct3"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct4"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct5"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TextView
            android:id="@+id/appTitle7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Te podría interesar"
            android:textColor="#969696"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.117"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnProduct0"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct1"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct2"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnProduct3"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct4"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />

            <ImageButton
                android:id="@+id/btnProduct5"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/icon_lacteos" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/nav_map"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Mapa"
            android:src="@drawable/map_gray" />

        <ImageButton
            android:id="@+id/nav_cart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Carrito"
            android:src="@drawable/market_color" />

        <ImageButton
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Buscar"
            android:src="@drawable/buscar_gray" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menú"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Plaza caporal"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>